<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/input_border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginBottom="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Tambah Keluarga"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:id="@+id/keluarga_nocm"
            android:layout_alignParentLeft="true"
            android:text="No.CM"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/keluarga_nocm_space"
            android:layout_toRightOf="@+id/keluarga_nocm"
            android:textSize="14sp"
            android:text=":"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/keluarga_nocm_value"
            android:textSize="14sp"
            android:inputType="number"
            android:digits="1234567890.-"
            android:layout_toRightOf="@+id/keluarga_nocm_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:id="@+id/keluarga_tgl"
            android:layout_alignParentLeft="true"
            android:text="Tgl. Lahir"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/keluarga_tgl_space"
            android:layout_toRightOf="@+id/keluarga_tgl"
            android:textSize="14sp"
            android:text=":"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/keluarga_tgl_value"
            android:textSize="14sp"
            android:inputType="date"
            android:focusableInTouchMode="false"
            android:layout_toRightOf="@+id/keluarga_tgl_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>