        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">
        <TextView
            android:id="@+id/loket_antrian_loketAntrian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loket A"/>

        <TextView
            android:id="@+id/loket_antrian_jmAntrian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Antrian -"/>

        <TextView
            android:id="@+id/loket_antrian_antrian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Antrian  -"/>

        <TextView
            android:id="@+id/loket_antrian_jmLayani"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Terlayani  -"/>
    </LinearLayout>
