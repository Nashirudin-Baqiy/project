<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_row="0"
        android:layout_column="0"
        android:background="@drawable/hijau_border"
        android:layout_height="120dp"
        android:layout_width="120dp">
        <TextView
            android:id="@+id/tv_loket"
            android:textSize="12sp"
            android:gravity="center"
            android:text="Loket A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_jmAntrian_a"
            android:textSize="10sp"
            android:gravity="center"
            android:text="Jumlah Antrian: 0"
            android:lines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_antrian_a"
            android:textSize="19sp"
            android:gravity="center"
            android:lines="1"
            android:textStyle="bold"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_jmLayani_a"
            android:textSize="10sp"
            android:gravity="center"
            android:text="Terlayani: 0"
            android:lines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>