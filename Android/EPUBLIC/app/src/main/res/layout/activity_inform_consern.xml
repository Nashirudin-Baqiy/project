<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="id.co.rsnasionaldiponegoro.epublic.Views.Activity.ActivityInformConsern">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/btn_back"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_back_abu" />
        </LinearLayout>
        <TextView
            android:text="Inform Consent"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="16dp"
                    android:text="Dengan ini menyatakan persetujuan untuk di lakukan Telekonsultasi Online "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <RadioGroup
                    android:layout_margin="5dp"
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rg1_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YA"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"/>

                    <RadioButton
                        android:id="@+id/rg1_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TIDAK"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"/>

                </RadioGroup>
                <LinearLayout
                    android:id="@+id/layout_ic_2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:textSize="16dp"
                    android:text="Saya memahami perlunya dan manfaat telekonsultasi online tersebut sebagaimana telah dijelaskan kepada saya "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <RadioGroup
                    android:layout_margin="5dp"
                    android:id="@+id/radioGroup2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rg2_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YA"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"/>

                    <RadioButton
                        android:id="@+id/rg2_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TIDAK"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"/>

                </RadioGroup>

                <TextView
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:textSize="16dp"
                    android:text="Saya juga menyadari bahwa oleh karena ilmu kedokteran bukan ilmu pasti, maka kesalahan bukanlah keniscayaan, melainkan sangat bergantung kepada Tuhan Yang Maha Esa "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <RadioGroup
                    android:layout_margin="5dp"
                    android:id="@+id/radioGroup3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rg3_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YA"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"/>

                    <RadioButton
                        android:id="@+id/rg3_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TIDAK"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"/>

                </RadioGroup>

                <TextView
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:textSize="16dp"
                    android:text="Upload Foto/Scan Tanda Tangan (Maksimal 1 Mb) *"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <Button
                    android:id="@+id/btnFindFile"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPrimaryDark"
                    android:text="Tambahkan File"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"></Button>

                <ImageView
                    android:id="@+id/image_ttd"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />


                <Button
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:id="@+id/btn_kirim"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPrimaryDark"
                    android:text="Kirim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Button>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
