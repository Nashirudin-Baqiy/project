<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="3dp"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:background="@drawable/input_border">
    <ImageView
        android:id="@+id/info_img"
        android:src="@drawable/ic_preguler"
        android:scaleType="fitXY"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="90dp"
        android:layout_height="60dp" />
    <TextView
        android:id="@+id/info_judul"
        android:textColor="#000000"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/info_img"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/info_tgl"
        android:layout_below="@+id/info_judul"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textColor="#000000"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/info_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/info_desc"
        android:layout_below="@+id/info_tgl"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textColor="#000000"
        android:maxLength="20"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/info_img"
        android:layout_width="200dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/info_jawaban"
        android:layout_below="@+id/info_desc"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textColor="#000000"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/info_img"
        android:layout_width="200dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content"
        android:text="Jawaban:"/>
</RelativeLayout>