<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="id.co.rsnasionaldiponegoro.epublic.Views.Activity.ActivityAntrian">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_antrian_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:background="@drawable/shadow_bottom"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/btn_back"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_back_abu" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp">
                        <TextView
                            android:text="Antrian"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/button_antrics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_border">
                    <TextView
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Antrian Pendaftaran"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/button_antripoli"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_border">
                    <TextView
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Antrian Poli"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/button_antriapotik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_border">
                    <TextView
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="Antrian Apotik"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_antrian_cs"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:background="@drawable/shadow_bottom"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/btn_back_cs"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_back_abu" />
                    </LinearLayout>
                    <LinearLayout

                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp">
                        <TextView
                            android:text="Antrian Pendaftaran"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_antriancs_noavaiable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Antrian Belum Ada"/>
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="5dp"
                        android:id="@+id/rv_antrianCS"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>
            </LinearLayout>

            <!--<include layout="@layout/content_layout_antrian_dokter"/>-->
            <LinearLayout
                android:id="@+id/layout_antrian_poli"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:background="@drawable/shadow_bottom"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/btn_back_poli"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_back_abu" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp">
                        <TextView
                            android:text="Antrian Poli"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <RelativeLayout
                        android:id="@+id/layout_search"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/input_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_alignParentLeft="true"
                            android:id="@+id/btn_search"
                            android:gravity="center"
                            android:layout_width="35dp"
                            android:layout_height="35dp">
                            <ImageView
                                android:src="@drawable/ic_search"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />
                        </LinearLayout>
                        <EditText
                            android:layout_toRightOf="@+id/btn_search"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:textSize="12sp"
                            android:hint="Search..."
                            android:maxLines="1"
                            android:id="@+id/input_search"
                            android:background="@color/colorWhite"
                            android:layout_width="265dp"
                            android:layout_height="35dp" />
                        <LinearLayout
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:id="@+id/btn_clear"
                            android:layout_width="35dp"
                            android:layout_height="35dp">
                            <ImageView
                                android:src="@drawable/ic_cancel"
                                android:layout_width="18dp"
                                android:layout_height="18dp" />
                        </LinearLayout>

                    </RelativeLayout>
                    <de.codecrafters.tableview.TableView
                        android:layout_below="@+id/layout_search"
                        android:id="@+id/tableView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_antrian_apotik"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:background="@drawable/shadow_bottom"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/btn_back_apotik"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_back_abu" />
                    </LinearLayout>
                    <LinearLayout

                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp">
                        <TextView
                            android:text="Antrian Apotik"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_antrian_noavaiable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Antrian Belum Ada"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_antrian"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
</LinearLayout>
