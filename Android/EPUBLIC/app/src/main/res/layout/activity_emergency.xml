<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="id.co.rsnasionaldiponegoro.epublic.Views.Activity.ActivityEmergency">
    <LinearLayout
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/part_actionbar"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:visibility="visible"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <com.google.android.gms.maps.MapView
                        android:id="@+id/mapView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="5dp"
                    android:text="@string/rs_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/ct_alamat"
                    android:textSize="14sp"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ct_notelp"
                    android:textSize="14sp"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ct_email"
                    android:textSize="14sp"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ct_ig"
                    android:textSize="14sp"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="5dp"
                    android:text="Pilih Mode Laporan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <GridLayout
                    android:layout_gravity="center"
                    android:rowCount="1"
                    android:columnCount="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/btn_viatelepon"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_border"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_column="0"
                        android:layout_row="0">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:src="@drawable/ic_telepony"
                            android:layout_width="70dp"
                            android:layout_height="70dp"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:text="Via Telp RS"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_viateleponigd"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_border"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_column="1"
                        android:layout_row="0">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:src="@drawable/ic_panic"
                            android:layout_width="70dp"
                            android:layout_height="70dp"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:text="Via Telp IGD"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_viadirect"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_border"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_column="2"
                        android:layout_row="0">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:src="@drawable/ic_hospital"
                            android:layout_width="70dp"
                            android:layout_height="70dp"/>
                        <TextView
                            android:text="Langsung ke tempat"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </GridLayout>



            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
